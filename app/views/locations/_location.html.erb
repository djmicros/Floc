<li>
  <%= link_to location.name, location %> 
  
	<% if location.user == current_user %>
	<%= link_to "Edit", edit_location_path(location), class: 'label label-success' %>
	<%= link_to 'Delete', location, :method => :delete, :confirm => "Are you sure you want to delete this location?", class: 'label label-warning' %>
	<% end %>
	
</li>